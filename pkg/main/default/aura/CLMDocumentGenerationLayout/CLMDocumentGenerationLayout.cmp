<aura:component controller="CLMDocumentGenerationController" extends="c:CLMUtility">
	<aura:attribute name="steps" type="String[]" />
	<aura:handler name="init" value="{!this}" action="{!c.init}" />
	<aura:attribute name="redirectCLM" type="String" />

	<div class="slds-p-around_small">
		<div class="ds-card-heading ">
			<b>{!$Label.c.CreatingAgreementsInDocuSignCLM}</b>
		</div>
		<div class="slds-p-top_medium ">
			<c:CLMInformationHelp isSubTitle="true"
				subTitle="{!$Label.c.CreateAndManageDocumentGenerationConfigurations}"
				imageURL="{!($Resource.GenerateDocuments)}" summary="{!$Label.c.CreateAndManageDocSummary}"
				link="{!$Label.c.LearnHowToGenDoc}" firstButtonName="{!$Label.c.OpenDocuSignCLMButton}" isLink="true"
				firstButtonNavigation="{!v.redirectCLM}" hyperlinkedURI="['tab','8']" />
		</div>
		<div class="slds-p-top_medium">
			<c:CLMInformationHelp isSubTitle="false" subTitle="" imageURL="{!($Resource.WorkflowButtonConfig)}"
				summary="{!$Label.c.CreateAndManageDocSummary2}" isLink="true" link="{!$Label.c.LearnHowToAddAButton}"
				firstButtonName="{!$Label.c.OpenObjectManagerButton}" hyperlinkedURI="['tab','8']" />
		</div>
		<div class="slds-border_top slds-p-top_medium">
			<c:CLMPreviewHelp isSubTitle="true" subTitle="{!$Label.c.DocumentGenerationConfigurations}"
				buttonLabel="{!$Label.c.GoToDocumentGeneration}" imageURL="{!($Resource.DocGenConfig)}"
				summary="{!$Label.c.DocumentGenerationConfigurationsSummary}" isSteps="true" steps="{!v.steps}" />
		</div>
		<div class="slds-p-top_medium">
			<c:CLMPreviewHelp isSubTitle="true" subTitle="{!$Label.c.DocumentGenerationProcessTitle}" showButton="false"
				imageURL="{!($Resource.DocGenProcess)}" summary="{!$Label.c.DocumentGenerationProcessSummary}"
				isSteps="false" steps="{!$Label.c.LearnHowTo}" />
		</div>
	</div>
</aura:component>