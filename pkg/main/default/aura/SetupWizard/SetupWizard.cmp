<aura:component description="SetupWizard" controller="SetupController">
    <!-- attributes -->
    <aura:attribute name="login" type="Object"/>
    <aura:attribute name="navigationData" type="Object"/>
    <aura:attribute name="selectedItem" type="String" default="tab_home"/>
    <aura:attribute name="showSetupSpinner" type="Object"/>
    <aura:attribute name="showSetupComponent" type="Object"/>
    <aura:attribute name="uiHelper" type="Object"/>

    <!--register events -->
    <aura:registerEvent name="logoutEvent" type="c:ReloadEvent"/>

    <!--register handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.initializeComponent}"/>
    <aura:handler name="logoutEvent" event="c:ReloadEvent" action="{!c.triggerLogout}"/>

    <div class="slds-grid">
        <div class="slds-col slds-large-size_1-of-6 slds-medium-size_1-of-3">

            <!-- Navigation items start here -->
            <lightning:verticalNavigation selectedItem="{!v.selectedItem}" onselect="{!c.handleSelect}"
                                          class="ds-admin-sidebar">
                <aura:iteration items="{!v.navigationData }" var="section">
                    <lightning:verticalNavigationSection label="{!section.label}">
                        <aura:iteration items="{!section.items }" var="item">
                            <aura:if isTrue="{!!empty(item.icon)}">
                                <lightning:verticalNavigationItemIcon
                                        label="{!item.label}"
                                        name="{!item.name}"
                                        iconName="{!item.icon}"/>
                                <aura:set attribute="else">
                                    <lightning:verticalNavigationItem
                                            label="{!item.label}"
                                            name="{!item.name}"/>
                                </aura:set>
                            </aura:if>
                        </aura:iteration>
                    </lightning:verticalNavigationSection>
                </aura:iteration>
            </lightning:verticalNavigation>
            <!-- Navigation items end here -->

        </div>

        <div class="slds-col slds-large-size_5-of-6 slds-medium-size_2-of-3 ds-admin-centerSpace slds-m-around_small">

            <!-- Home section starts here -->
            <aura:if isTrue="{!v.selectedItem == 'tab_home'}">
                <!-- Account Details -->
                <div class="slds-m-left_xx-large slds-p-left_xx-large slds-p-right_xx-large slds-m-right_xx-large slds-m-top_large">
                    <c:SetupAccount login="{!v.login}"/>
                </div>
                <!-- Configuration details -->
                <div class="slds-m-left_xx-large slds-p-left_xx-large slds-p-right_xx-large slds-m-right_xx-large slds-m-top_large">
                    <div class="slds-text-title_caps slds-m-bottom_small">Configuration</div>
                    <div class="slds-box">
                        <div class="slds-grid slds-grid_align-spread slds-p-around_medium ds-config-item-border">
                            <div class="slds-col">
                                <div class="slds-media slds-media_large">
                                    <div class="slds-media__figure">
                                        <lightning:icon iconName="standard:email_chatter" size="large"/>
                                    </div>
                                    <div class="slds-media__body">
                                        <p class="ds-configuration-detail">E-Signature</p>
                                        <p>Customize default email messaging, setup reminders and envelope expiration
                                            days.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-col slds-p-bottom_medium">
                                <lightning:button label="Configure"></lightning:button>
                            </div>
                        </div>
                        <div class="slds-grid slds-grid_align-spread slds-p-around_medium ds-config-item-border">
                            <div class="slds-col slds-p-top_medium">
                                <div class="slds-media slds-media_large">
                                    <div class="slds-media__figure">
                                        <lightning:icon iconName="standard:contract" size="large"/>
                                    </div>
                                    <div class="slds-media__body">
                                        <p class="ds-configuration-detail">Document Generation</p>
                                        <p>In one-click, generate polished, customizable agreements with your Salesforce
                                            data.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-col slds-p-bottom_medium slds-p-top_medium">
                                <lightning:button label="Configure"></lightning:button>
                            </div>
                        </div>
                        <div class="slds-grid slds-grid_align-spread slds-p-around_medium">
                            <div class="slds-col slds-p-top_medium">
                                <div class="slds-media slds-media_large">
                                    <div class="slds-media__figure">
                                        <lightning:icon iconName="standard:approval" size="large"
                                                        class="ds-negotiation-icon-background"/>
                                    </div>
                                    <div class="slds-media__body">
                                        <p class="ds-configuration-detail">Collaboration and Negotiation</p>
                                        <p>Send agreements for approval internally, and review with third parties with
                                            ease.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-col slds-p-bottom_medium slds-p-top_medium">
                                <lightning:button label="Configure"></lightning:button>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- Administration details -->
                <div class="slds-m-left_xx-large slds-p-left_xx-large slds-p-right_xx-large slds-m-right_xx-large slds-m-top_large">
                    <div class="slds-text-title_caps slds-m-bottom_small">Administration</div>
                    <div class="slds-box">
                        <div class="slds-grid slds-grid_align-spread slds-p-around_medium ds-config-item-border">
                            <div class="slds-col">
                                <div class="slds-media slds-media_large">
                                    <div class="slds-media__figure">
                                        <lightning:icon iconName="standard:avatar" size="large"
                                                        class="ds-userManagement-icon-background"/>
                                    </div>
                                    <div class="slds-media__body">
                                        <p class="ds-configuration-detail">User Management</p>
                                        <p>Give your team members access to DocuSign Agreements features.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-col slds-p-bottom_medium">
                                <lightning:button label="Configure"></lightning:button>
                            </div>
                        </div>
                        <div class="slds-grid slds-grid_align-spread slds-p-around_medium">
                            <div class="slds-col slds-p-top_medium">
                                <div class="slds-media slds-media_large">
                                    <div class="slds-media__figure">
                                        <lightning:icon iconName="standard:canvas" size="large"
                                                        class="ds-components-icon-background"/>
                                    </div>
                                    <div class="slds-media__body">
                                        <p class="ds-configuration-detail">Components</p>
                                        <p>Customize layouts and experiences by adding buttons and components</p>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-col slds-p-bottom_medium slds-p-top_medium">
                                <lightning:button label="Configure"></lightning:button>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- support -->
                <div class="slds-m-left_xx-large slds-p-left_xx-large slds-p-right_xx-large slds-m-right_xx-large slds-m-top_xx-large">
                    <div class="slds-box">
                        <div class="slds-grid slds-grid_align-spread slds-m-around_xx-small">
                            <div class="slds-col slds-size_3-of-4">
                                <div class="slds-media">
                                    <div class="slds-media__figure ds-havingTrouble-illustration">
                                        <img src="{!$Resource.HavingTrouble}"/>
                                    </div>
                                    <div class="slds-media__body">
                                        <p class="ds-configuration-detail">Having trouble?</p>
                                        <p>At DocuSign, we are dedicated to your success. We've created a Help page to
                                            provide answers to common questions for DocuSign Agreements.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-col slds-p-bottom_medium">
                                <lightning:button label="Get Help"></lightning:button>
                            </div>
                        </div>
                    </div>

                </div>
            </aura:if>
            <!-- Home section ends here -->

            <!-- eSignature section starts here-->
            <aura:if isTrue="{!v.selectedItem == 'tab_eSignature'}">
                This is eSignature section.
            </aura:if>
            <!-- eSignature ends here-->

            <!-- document generation section starts here -->
            <aura:if isTrue="{!v.selectedItem == 'tab_documentGeneration'}">
                This is document generation section.
            </aura:if>
            <!-- document generation section ends here-->

            <!-- negotiation section starts here -->
            <aura:if isTrue="{!v.selectedItem == 'tab_negotiation'}">
                This is negotiation section.
            </aura:if>
            <!-- negotiation section ends here-->

            <!-- user management section starts here -->
            <aura:if isTrue="{!v.selectedItem == 'tab_userManagement'}">
                <div class="slds-m-left_xx-large slds-p-left_xx-large slds-p-right_xx-large slds-m-right_xx-large slds-m-top_large">
                    <c:SetupUsers/>
                </div>

            </aura:if>
            <!-- user management section ends here -->

            <!-- components section starts here -->
            <aura:if isTrue="{!v.selectedItem == 'tab_components'}">
                This is components section.
            </aura:if>
            <!-- components section ends here -->

            <!-- help section starts here -->
            <aura:if isTrue="{!v.selectedItem == 'tab_help'}">
                This is help section.
            </aura:if>
            <!-- help section ends here -->

            <div class="slds-p-top_large slds-p-bottom_large">
            </div>
        </div>
    </div>

</aura:component>