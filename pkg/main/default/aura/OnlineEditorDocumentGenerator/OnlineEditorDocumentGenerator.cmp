<aura:component description="OnlineEditorDocumentGenerator" controller="GenController" extends="c:RootContainer">
    <ltng:require styles="{!$Resource.scmwidgetscss}"
                  scripts="{!join(',',$Resource.stringUtils, $Resource.navUtils, $Resource.scmwidgetsjs)}"/>

    <aura:attribute name="templateId" type="Id"/>
    <aura:attribute name="recordName" type="String"/>
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="renderOnlineEditorGenerator" type="Object"/>
    <aura:attribute name="sendForSignature" type="Object"/>
    <aura:attribute name="onCancel" type="Object"/>
    <aura:attribute name="exportGeneratedDocument" type="Object"/>

    <aura:attribute name="permission" type="Object" access="private"/>
    <aura:attribute name="fileName" type="String" access="private"/>
    <aura:attribute name="scmFileGuid" type="String" access="private"/>
    <aura:attribute name="fetchingOAuthStatus" type="Boolean" default="true" access="private"/>
    <aura:attribute name="isAuthorized" type="Boolean" default="false" access="private"/>
    <aura:attribute name="isGenEnabled" type="Boolean" default="false" access="private"/>
    <aura:attribute name="isButtonEnabled" type="Boolean" default="false" access="private"/>
    <aura:attribute name="isGenTrialExpired" type="Boolean" default="false" access="private"/>
    <aura:attribute name="products" type="Product[]" access="private"/>
    <aura:attribute name="loading" type="Boolean" default="true" access="private"/>
    <aura:attribute name="showButtonSpinner" type="Boolean" default="false" access="private"/>

    <aura:handler name="change" value="{!v.isAuthorized}" action="{!c.onChangeIsAuthorized}"/>

    <div id="inputPanel">
        <div class="slds-page-header slds-border_bottom">
            <div class="slds-grid">
                <div class="slds-col slds-has-flexi-truncate">
                    <div class="slds-media slds-media_center">
                        <div class="slds-media__figure">
                            <span class="slds-icon_container slds-icon-standard-custom">
                                <img class="slds-is-relative slds-icon onlineEditorToolbarIcon"
                                     src="{!$Resource.adflogo}" alt=""/>
                            </span>
                        </div>
                        <div class="slds-media__body">
                            <div class="slds-page-header__name">
                                <div class="slds-page-header__name-title">
                                    <span>{!v.recordName}</span>
                                    <div class="slds-page-header__title slds-truncate">
                                        {!v.title}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="{!if(v.loading,'slds-hide','slds-col slds-no-flex slds-align-top')}">
                    <aura:if isTrue="{!v.showButtonSpinner}">
                        <div class="ds-buttonSpinner">
                            <c:BlueSpinner/>
                        </div>
                        <aura:set attribute="else">
                            <lightning:button variant="neutral" label="{!$Label.c.Cancel}"
                                              onclick="{!c.cancelClicked}"/>
                            <lightning:buttonGroup class="{!if(v.isButtonEnabled,'','slds-hide')}">
                                <lightning:button variant="brand"
                                                  label="{!$Label.c.SendForSignature}"
                                                  onclick="{!c.sendForSignatureClicked}"/>
                                <lightning:buttonMenu menuAlignment="right"
                                                      disabled="{!!v.isButtonEnabled}"
                                                      class="{!if(v.isButtonEnabled,'ds-onlineEditorGenButtonMenu','ds-onlineEditorGenButtonMenuDisabled')}">
                                    <lightning:menuItem label="{!$Label.c.DownloadAsWordFile}"
                                                        value="{!$Label.c.DownloadAsWordFile}"
                                                        onactive="{!c.downloadAsWordFileClicked}"/>
                                </lightning:buttonMenu>
                            </lightning:buttonGroup>
                        </aura:set>
                    </aura:if>
                </div>
            </div>
        </div>
    </div>
    <aura:if isTrue="{!or(v.fetchingOAuthStatus, v.loading)}">
        <div class="ds-gen-templates-setup-spinner" aura:id="ds-spinner">
            <c:BlueSpinner/>
        </div>
    </aura:if>

    <aura:if isTrue="{!not(v.isAuthorized)}">
        <c:AuthorizeApplication isAuthorized="{!v.isAuthorized}"
                                fetchingOAuthStatus="{!v.fetchingOAuthStatus}"
                                products="{!v.products}"
                                permission="{!v.permission}"/>
    </aura:if>
    <div id="onlineEditorGenerator"></div>
</aura:component>
