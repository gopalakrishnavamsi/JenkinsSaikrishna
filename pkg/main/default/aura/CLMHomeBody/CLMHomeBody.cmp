<aura:component extends="c:CLMUtility" controller="CLMApexUtility">
    <ltng:require scripts="{!$Resource.navUtils}" />

    <!--event handlers-->
    <aura:handler name="CLMHelpPrimaryButtonClicked" event="c:CLMHelpCardEvent" action="{!c.onPrimaryButtonClick}" />
    <aura:handler name="CLMHelpSecondaryButtonClicked" event="c:CLMHelpCardEvent"
        action="{!c.onSecondaryButtonClick}" />

    <div class="slds-grid slds-grid_vertical">
        <div class="slds-col slds-m-around_medium">
            <div class="slds-p-bottom_small slds-p-top_small ds-textLabel-color">
                {!$Label.c.ObjectMapping}
            </div>
            <c:CLMMapObjectExpandCard />
        </div>
        <div class="slds-col slds-m-around_medium">
            <div class="slds-p-bottom_small slds-p-top_small ds-textLabel-color">
                {!$Label.c.ConfigureObjectPageLayout}
            </div>
            <c:CLMHelp title="{!$Label.c.ViewYourObjectFolders}" secondButtonName="{!$Label.c.ConfigureLayouts}" firstButtonName="{!$Label.c.LearnMore}"
                showIcon="false"
                summary="{!$Label.c.AddLayoutInfo}" />
        </div>
        <div class="slds-col slds-m-around_medium">
            <div class="slds-p-bottom_small slds-p-top_small ds-textLabel-color">
                {!$Label.c.OptimizeDocumentGeneration}
            </div>
            <c:CLMHelp title="{!$Label.c.SpeedUpDocumentGeneration}" secondButtonName="{!$Label.c.ConfigureButtons}" firstButtonName="{!$Label.c.LearnMore}"
                showIcon="false"
                summary="{!$Label.c.ConfigureButtonInfo}" />
        </div>
        <div class="slds-col slds-m-around_medium">
            <div class="slds-p-bottom_small slds-p-top_small ds-textLabel-color">
                {!$Label.c.Administration}
            </div>
            <c:CLMHelp title="{!$Label.c.UserManagement}" secondButtonName="{!$Label.c.Manage}"
                firstButtonName="{!$Label.c.LearnMore}" showIcon="false" showFirstButton="false"
                summary="{!$Label.c.UserManagementInfo}" />
        </div>
        <div class="slds-col slds-m-around_medium">
            <c:CLMTroubleshoot isGray="true" />
        </div>
    </div>
</aura:component>