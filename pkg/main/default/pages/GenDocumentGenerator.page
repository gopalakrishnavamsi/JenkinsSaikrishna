<apex:page sidebar="false" showHeader="true" controller="GenController" title="Generate Documents">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <apex:includeLightning/>
    <apex:includeScript value="{!$Resource.navUtils}"/>
    <apex:slds/>
    <style type="text/css">
        .noSidebarCell #content {
            background-color: white;
            position: relative;
            height: calc(100vh - 165px);
            overflow: auto;
        }

        .noSidebarCell #spinner {
            height: calc(100vh - 165px);
        }

        .bodyDiv .outerNoSidebar,
        .noSidebarCell,
        .sidebarCell .fixed {
            padding: 0;
        }

        #auraErrorMessage {
            position: fixed;
            top: 0;
            z-index: 9999;
        }
    </style>


    <div id="spinner">
        <div role="status" class="slds-spinner slds-spinner_medium">
            <span class="slds-assistive-text">{!$Label.Loading}</span>
            <div class="slds-spinner__dot-a"></div>
            <div class="slds-spinner__dot-b"></div>
        </div>
    </div>

    <div id="content" style="display: none;">
        <!-- Page Header -->
        <div class="slds-page-header slds-border_bottom">
            <div class="slds-page-header__row">
                <div class="slds-page-header__col-title">
                    <div class="slds-media slds-media_center">
                        <div class="slds-media__figure">
                                <span class="slds-icon_container slds-icon-standard-drafts" title="drafts">
                                    <svg class="slds-icon slds-page-header__icon" aria-hidden="true">
                                        <use xmlns:xlink="http://www.w3.org/1999/xlink"
                                             xlink:href="{!URLFOR($Asset.SLDS, 'assets/icons/standard-sprite/svg/symbols.svg#drafts')}"/>
                                    </svg>
                                    <span class="slds-assistive-text">{!$Label.Drafts}</span>
                                </span>
                        </div>
                        <div class="slds-media__body">
                            <div class="slds-page-header__name">
                                <div class="slds-page-header__name-title">
                                    <p class="slds-page-header__name-meta">{!$CurrentPage.parameters.recordName}</p>
                                    <h1>
                                        <span class="slds-page-header__title slds-truncate"
                                              title="{!$CurrentPage.parameters.title}"><strong>{!$CurrentPage.parameters.title}</strong></span>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="slds-p-around_x-large">
            <div class="slds-container slds-container_medium slds-container_center">
                <div id="lightning"></div>
            </div>
        </div>
    </div>


    <script type="text/javascript">
      var _navigateToURL = function (event) {
        var url = event.getParam('url');
        window.open(url, '_self');
      };
      $Lightning.use('{!JSENCODE(namespace)}:GenDocumentGeneratorApp', function () {
        $Lightning.createComponent('{!JSENCODE(namespace)}:Generator', {
          templateId: '{!JSENCODE($CurrentPage.parameters.templateId)}',
          recordId: '{!JSENCODE($CurrentPage.parameters.recordId)}',
          isClassic: true,
          showGenerateButton: true
        }, 'lightning', function (component, status, errorMessage) {
          if (null == errorMessage) {
            document.getElementById('spinner').style.display = 'none';
            document.getElementById('content').style.display = 'block';
            $A.eventService.addHandler({'event': 'force:navigateToURL', 'handler': _navigateToURL});
          }
        });
      });
    </script>
    </html>
</apex:page>
