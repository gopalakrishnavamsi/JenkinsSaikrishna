{
  "name": "SalesforceCore",
  "version": "1.0.0",
  "description": "This is the new DocuSign for Salesforce base package. This is a lighter version of DFS that is installable on Salesforce Essentials organizations. This package also contains the Apex Toolkit.",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^2.2.0",
    "jsdom": "15.1.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "module-alias": "^2.2.0",
    "prettier": "^1.17.0"
  },
  "scripts": {
    "auth": "sfdx force:auth:web:login -a DocuDevHub -d",
    "buildOrg": "sfdx force:org:create -f ./etc/developerScratch.json -s -a dfsle-scratch-org -d 30",
    "updateOrg": "sfdx force:source:push",
    "postInstall": "sfdx force:apex:execute -f ./etc/postinstall.apex -u dfsle-scratch-org",
    "generatePassword": "sfdx force:user:password:generate -u dfsle-scratch-org",
    "openOrg":"sfdx force:org:open",
    "installPackage":"sfdx force:package:install",
    "setup":"npm run auth && npm run buildOrg && npm run updateOrg && npm run postInstall && npm run generatePassword && npm run openOrg",    
    "lint": "eslint ./;",
    "test": "mocha -r jsdom-global/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.docusignhq.com/Integrations/SalesforceCore.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {}
}
