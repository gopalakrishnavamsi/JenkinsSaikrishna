<aura:component>
    <!-- Help -->
    <div class="strike-help slds-box slds-m-vertical_large slds-theme_default">
        <!-- Header -->
        <div class="strike-help__header">
            <h3 class="slds-text-heading_medium">{!$Label.c.HavingTrouble}</h3>
        </div>
        <!-- /Header -->

        <!-- Body -->
        <div class="strike-help__body slds-text-body_small">
            <div class="slds-grid slds-wrap slds-gutters_small">
                <div class="slds-col slds-size_1-of-1 slds-small-size_2-of-3 slds-large-size_3-of-4">
                    <p class="slds-m-bottom_small">
                        <lightning:formattedRichText value="{!$Label.c.SupportInfo}"/>
                    </p>
                    <p class="slds-m-bottom_small">
                        <lightning:formattedRichText value="{!$Label.c.SupportPrep}"/>
                    </p>
                    <a href="https://support.docusign.com/en/contactSupport" target="_blank"
                       class="slds-button slds-button_neutral">{!$Label.c.ContactSupport}</a>
                </div>
                <div class="slds-col slds-size_1-of-1 slds-small-size_1-of-3 slds-large-size_1-of-4">
                    <h4 class="slds-text-heading_small">{!$Label.c.HelpfulLinks}</h4>
                    <ul class="slds-list_dotted slds-m-top_x-small">
                        <li class="slds-item"><a href="https://support.docusign.com/"
                                                 target="_blank">{!$Label.c.SupportCenter}</a></li>
                        <li class="slds-item"><a href="https://support.docusign.com/forum"
                                                 target="_blank">{!$Label.c.Community}</a></li>
                        <li class="slds-item"><a href="https://trust.docusign.com/en-us/"
                                                 target="_blank">{!$Label.c.TrustCenter}</a></li>
                        <li class="slds-item"><a
                                href="https://www.docusign.com/features-and-benefits/support-plans-pricing"
                                target="_blank">{!$Label.c.SupportPlans}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Body -->
    </div>
    <!-- /Help -->
</aura:component>
