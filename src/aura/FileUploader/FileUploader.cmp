<aura:component implements="force:hasRecordId" access="global" controller="FileController">
    <aura:handler name="init" value="{!this}" action="{!c.initialize}"/>
    <aura:attribute name="frameSrc" type="String"/>
    <aura:attribute name="frameWidth" type="String" default="124"/>
    <aura:attribute name="frameHeight" type="String" default="100"/>
    <!-- Needed to send messages to VF page. But we will get it from VF itself -->
    <aura:attribute name="vfHost" type="String" default=""/>
    <!-- Domain of LC for VF to send message -->
    <aura:attribute name="lcHost" type="String"/>
    <aura:attribute name="namespace" type="String" description="Namespace."/>
    <aura:attribute name="receipt" type="Map"/>
    <aura:attribute name="index" type="String"/>
    <aura:attribute name="message" type="String"/>

    <div class="slds">
        <iframe aura:id="vfFrame" src="{!v.frameSrc}" width="{!v.frameWidth}" height="{!v.frameHeight}"
                class="ds-file-selector"></iframe>
        <aura:if isTrue="{!v.message != $Label.c.UploadSuccessful}">
            <div class="slds-text-color_error">
                    {!v.message}
            </div>
        </aura:if>
    </div>
</aura:component>
